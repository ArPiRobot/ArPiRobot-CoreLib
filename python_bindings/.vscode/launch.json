{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Native testrobot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/testrobot-py/main.py",
            "console": "integratedTerminal",
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/../cpp_library/build/native/Debug:${env:LD_LIBRARY_PATH}",
                "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}"
            },
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Attach Remote testrobot",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "192.168.10.1",
                "port": 2000
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/home/arpirobot/CoreLib-Test"
                }
            ]
        }
    ]
}