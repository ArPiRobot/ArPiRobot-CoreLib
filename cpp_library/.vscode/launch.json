    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch Native",
            "program": "${workspaceFolder}/build/native/Debug/testrobot",
            "args": [],
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/build/native/Debug:${env:LD_LIBRARY_PATH}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "custom",
            "name": "Attach armv6 Remote",
            "targetCreateCommands": [
                "target create ${workspaceFolder}/build/armv6/Debug/testrobot"
            ],
            "processCreateCommands": [
                "gdb-remote 192.168.10.1:2000",
                "shell sleep 1",
                "c"
            ],
            "windows": {
                "processCreateCommands": [
                    "gdb-remote 192.168.10.1:2000",
                    "shell waitfor /t 1 pause",
                    "c"
                ]
            }
        }
    ]
}