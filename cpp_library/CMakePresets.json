{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "native-clang",
            "displayName": "native-clang",
            "description": "Target native system using LLVM toolchain",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/native-clang",
            "cacheVariables": {
                "USE_PIGPIO": {
                    "type": "BOOL",
                    "value": "OFF"
                },
                "USE_LGPIO": {
                    "type": "BOOL",
                    "value": "OFF"
                }
            },
            "environment": {
                "CC": "clang",
                "CXX": "clang++"
            },
            "vendor": {}
        },
        {
            "name": "armv6-clang",
            "displayName": "armv6-clang",
            "description": "Targeting armv6 systems using LLVM toolchain",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/armv6-clang",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/arpirobot-armv6-toolchain-clang.cmake"
            },
            "environment": {},
            "vendor": {}
        },
        {
            "name": "armv6-gcc",
            "displayName": "armv6-gcc",
            "description": "Targeting armv6 systems using GNU toolchain",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/armv6-gcc",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/arpirobot-armv6-toolchain-gcc.cmake",
                "CMAKE_BUILD_WITH_INSTALL_RPATH": "ON"
            },
            "environment": {},
            "vendor": {}
        },
        {
            "name": "aarch64-clang",
            "displayName": "aarch64-clang",
            "description": "Targeting aarch64 systems using LLVM toolchain",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/aarch64-clang",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/arpirobot-aarch64-toolchain-clang.cmake"
            },
            "environment": {},
            "vendor": {}
        }
    ],
    "buildPresets": [
        {
            "name": "native-clang-debug",
            "displayName": "Debug",
            "configurePreset": "native-clang",
            "configuration": "Debug"
        },
        {
            "name": "native-clang-release",
            "displayName": "Release",
            "configurePreset": "native-clang",
            "configuration": "Release"
        },
        {
            "name": "native-clang-minsizerel",
            "displayName": "MinSizeRel",
            "configurePreset": "native-clang",
            "configuration": "MinSizeRel"
        },
        {
            "name": "native-clang-relwithdebinfo",
            "displayName": "RelWithDebInfo",
            "configurePreset": "native-clang",
            "configuration": "RelWithDebInfo"
        },

        {
            "name": "armv6-clang-debug",
            "displayName": "Debug",
            "configurePreset": "armv6-clang",
            "configuration": "Debug"
        },
        {
            "name": "armv6-clang-release",
